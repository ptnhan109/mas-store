<body>
    <style>
        .div-loading {
            position: fixed;
            display: block;
            width: 100%;
            height: 100vh;
            top: 0;
            left: 0;
            text-align: center;
            opacity: 0.7;
            background-color: #fff;
            z-index: 99;
        }

        #spinner-loading {
            position: absolute;
            top: 50%;
        }
    </style>
    <div id="app">
        <div id="main" class="layout-horizontal">
            <header class="mb-5">
                <div class="header-top">
                    <div class="container">
                        <div class="logo">
                            <a href="@Url.Action("Dashboard","Dashboard")"><img src="/assets/images/logo/logo.png" alt="Logo" srcset=""></a>
