
@{
    ViewData["Title"] = "CustomerGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>NHÓM KHÁCH HÀNG</h3>
            <p class="text-subtitle text-muted">Nhóm khách hàng</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="home.html">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nhóm khách hàng</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">

    <section class="section">
        <div class="col-12 d-flex justify-content-end" style="margin-bottom: 7px;">
            <a href="javascript:;" class="btn btn-success me-1 mb-1" id="add-customer-group">
                <i class="bi bi-lock-open"></i> Thêm mới
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên nhóm</th>
                            <td>Mô tả</td>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody id="customer-groups">
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>

<div class="modal fade text-left modal-" id="modal-add-customer-group" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discount-title" style="text-transform: uppercase;">THÊM MỚI NHÓM KHÁCH HÀNG</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-vertical">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-name">Tên nhóm</label>
                                    <input type="text" id="customer-group-name" class="form-control" name="fname" placeholder="Tên danh mục">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-description">Mô tả</label>
                                    <textarea class="form-control" id="customer-group-description" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer pd-t-0">
                <button type="button" class="btn btn-light-primary" data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Hủy bỏ</span>
                </button>
                <button type="button" class="btn btn-primary ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" id="btn-add-customer-group">Thêm mới</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade text-left modal-" id="modal-update-customer-group" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <input id="update-group-id" hidden />
                <h5 class="modal-title" id="discount-title" style="text-transform: uppercase;">THÊM MỚI NHÓM KHÁCH HÀNG</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-vertical">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="update-name">Tên nhóm</label>
                                    <input type="text" id="update-group-name" class="form-control" name="fname" placeholder="Tên danh mục">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="update-description">Mô tả</label>
                                    <textarea class="form-control" id="update-group-description" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer pd-t-0">
                <button type="button" class="btn btn-light-primary" data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Hủy bỏ</span>
                </button>
                <button type="button" class="btn btn-primary ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" id="btn-update-customer-group">Cập nhật</span>
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/assets/vendors/jquery/jquery.min.js"></script>
<script src="/assets/vendors/jquery-datatables/jquery.dataTables.min.js"></script>
<script src="/assets/vendors/jquery-datatables/custom.jquery.dataTables.bootstrap5.min.js"></script>
<script src="/assets/vendors/fontawesome/all.min.js"></script>
<script>
    $(document).ready(function () {

        GetCustomerGroups();

        $("#add-customer-group").click(function () {
            $("#modal-add-customer-group").modal("show");

        });

        $("#btn-add-customer-group").click(function () {
            let name = $("#customer-group-name").val();
            let description = $("#customer-group-description").val();
            let url = "@Url.Action("AddCustomerGroup","Admin")";
            let request = {
                Name: name,
                Description: description
            };

            $.ajax({
                url: url,
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                traditional: true,
                data: JSON.stringify(request),
                success: function (data) {
                    GetCustomerGroups();
                    $("#modal-add-customer-group").modal("hide");
                    showMessage("success", data);
                }
            });

        });

        $("#btn-update-customer-group").click(function () {

            let name = $("#update-group-name").val();
            let description = $("#update-group-description").val();
            let id = $("#update-group-id").val();
            let request = {
                Id: id,
                Description: description,
                Name: name
            };

            let url = "@Url.Action("UpdateCustomerGroup","Admin")";
                $.ajax({
                    url: url,
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    traditional: true,
                    data: JSON.stringify(request),
                    success: function (data) {
                        GetCustomerGroups();
                        $("#modal-update-customer-group").modal("hide");
                        showMessage("success", data);
                    }
                });
        });
    });
    function GetCustomerGroups() {
        let url = "@Url.Action("GetCustomerGroups","Admin")";
        $.ajax({
            url: url,
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            traditional: true,
            success: function (data) {
                let html = "";
                let i = 1;
                data.forEach(function (group, index) {
                    html += '<tr group-id="';
                    html += group.id;
                    html += '"><td>';
                    html += i;
                    html += '</td><td>';
                    html += group.name;
                    html += '</td><td>';
                    html += group.description;
                    html += '</td><td>';
                    html += group.createdAt;
                    html += '</td><td>';
                    html += '<a href="javascript:;" class="group-update" group-id="';
                    html += group.id;
                    html += '"><i class="fa fa-edit text-primary"></i></a>&nbsp;';
                    html += '<a href="javascript:;" class="group-delete" group-id="';
                    html += group.id;
                    html += '"><i class="fa fa-trash text-danger"></i></a>';
                    html += '</td>';
                    html += '</tr>';
                    i++;
                });

                $("#customer-groups").html(html);

                $("a.group-update").click(function () {
                    let row = $(this).closest("tr");
                    let id = row.attr("group-id");
                    let name = row.find("td:nth-child(2)").text();
                    let description = row.find("td:nth-child(3)").text();

                    $("#update-group-name").val(name);
                    $("#update-group-description").val(description);
                    $("#update-group-id").val(id);
                    $("#modal-update-customer-group").modal("show");
                });

                $("a.group-delete").click(function () {
                    let row = $(this).closest("tr");
                    let id = row.attr("group-id");
                    row.remove();
                    DeleteGroup(id);
                });
            }
        });
    }

    function DeleteGroup(id) {
        let url = "@Url.Action("DeleteCustomerGroup","Admin")";
        $.ajax({
            url: url,
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            traditional: true,
            data: {
                id: id
            },
            success: function (data) {
                showMessage("danger", data);
            }
        })
    }

</script>