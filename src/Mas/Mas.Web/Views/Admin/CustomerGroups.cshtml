﻿

@{
    ViewData["Title"] = "CustomerGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>NHÓM KHÁCH HÀNG</h3>
            <p class="text-subtitle text-muted">Nhóm khách hàng</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="home.html">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nhóm khách hàng</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">

    <section class="section">
        <div class="col-12 d-flex justify-content-end" style="margin-bottom: 7px;">
            <a href="javascript:;" class="btn btn-success me-1 mb-1" id="add-customer-group">
                <i class="bi bi-lock-open"></i> Thêm mới
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên nhóm</th>
                            <td>Mô tả</td>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody id="customer-groups">
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>

<div class="modal fade text-left modal-" id="modal-add-customer-group" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discount-title" style="text-transform: uppercase;">THÊM MỚI NHÓM KHÁCH HÀNG</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-vertical">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-name">Tên nhóm</label>
                                    <input type="text" id="customer-group-name" class="form-control" name="fname" placeholder="Tên danh mục">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-description">Mô tả</label>
                                    <textarea class="form-control" id="customer-group-description" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer pd-t-0">
                <button type="button" class="btn btn-light-primary" data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Hủy bỏ</span>
                </button>
                <button type="button" class="btn btn-primary ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" id="btn-add-customer-group">Thêm mới</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade text-left modal-" id="modal-update-customer-group" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
