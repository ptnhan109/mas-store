@using Mas.Core.Contants;
@model Mas.Application.ProductServices.Dtos.ProductDetail
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var units = ContantsUnit.Units();
}

<div class="page-heading">
    <h3>THÊM MỚI HÀNG HÓA</h3>

    <p class="text-subtitle text-muted">Thêm mới hàng hóa trong cửa hàng</p>
</div>
<div class="page-content">
    <form asp-action="UpdateProduct" asp-controller="Admin" id="updateProductForm" method="post">
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>THÔNG TIN HÀNG HÓA</strong>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="form">
                                    <div class="row">
                                        <input type="text" name="Id" value="@Model.Id" hidden />
                                        <input type="text" name="DefaultPriceId" value="@Model.DefaultPriceId" hidden />
                                        <div class="col-md-6 col-12">
                                            <div class="col-md-12 col-12">
                                                <h6>Mã vạch</h6>
                                                <div class="form-group position-relative">
                                                    <input type="text" class="form-control"
                                                           placeholder="Hệ thống tự động tạo mới khi để trống" name="BarCode" id="txtBarCode" value="@Model.BarCode">
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <h6>Tên hàng hóa</h6>
                                                <div class="form-group position-relative">
                                                    <input type="text" class="form-control"
                                                           placeholder="Tên hàng hóa thường gọi" name="Name" id="txtName" value="@Model.Name">
                                                </div>
                                            </div>

                                            <div class="col-md-12 col-12">
                                                <h6>Giá bán</h6>
                                                <div class="form-group position-relative">
                                                    <input type="number" class="form-control" value="@Model.DefaultSellPrice" name="DefaultSellPrice" id="txtDefaultSellPrice">
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <h6>Giá nhập</h6>
                                                <div class="form-group position-relative">
                                                    <input type="number" class="form-control" value="@Model.DefaultImportPrice" name="DefaultImportPrice" id="txtDefaultImportPrice" min="0">
                                                </div>

                                            </div>
                                            <div class="col-md-12 col-12">
                                                <div class="row">
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-check form-switch">
                                                            <input class="form-check-input" type="checkbox"
                                                                   id="IsSplitByImportPrice">
                                                            <label class="form-check-label"
                                                                   for="IsSplitByImportPrice">
                                                                Tự chia theo giá
                                                                nhập
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <br>


                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="col-md-12 col-12">
                                                <h6>Tồn kho hiện tại</h6>
                                                <div class="form-group position-relative">
                                                    <input type="number" class="form-control" value="@Model.Inventory" name="Inventory" id="txtInventory">
                                                </div>
                                            </div>

                                            <div class="col-md-12 col-12">
                                                <h6>Danh mục hàng</h6>
                                                <fieldset class="form-group">
                                                    <select class="form-select" id="drpCategory" name="CategoryId">
                                                    </select>
                                                </fieldset>
                                            </div>


                                            <div class="col-md-12 col-12">
                                                <h6>Đơn vị tính cơ bản</h6>
                                                <fieldset class="form-group">
                                                    <select class="form-select" id="dtpUnit" name="UnitId">

                                                        <option disabled selected>Tất cả</option>
                                                        @foreach (var unit in units)
                                                        {
                                                            <option value='@unit.Id'>@unit.Name</option>
                                                        }
                                                    </select>
                                                </fieldset>
                                            </div>
                                            <br />
                                            <div class="d-inline-block me-2 mb-1" id="IsConsignment">
                                                <div class="form-check">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox"
                                                               class="form-check-input form-check-success form-check-glow" name="customCheck">
                                                        <label class="form-check-label"
                                                               for="customColorCheck1">
                                                            Quản lý theo lô/ hạn sử
                                                            dụng
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-12" id="consignment">
                                                <div class="row">
                                                    <h6>Cận date trước</h6>
                                                    <div class="col-md-6 col-6">
                                                        <div class="form-group position-relative ">
                                                            <input type="number" class="form-control" value="@Model.CloseToDate" name="CloseToDate" id="txtCloseToDate">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-6">
                                                        <fieldset class="form-group">
                                                            <select class="form-select" id="basicSelect">
                                                                <option>Ngày</option>
                                                                <option>Tháng</option>
                                                            </select>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="add-transfer">
            <section id="multiple-column-form" class="transfer-session">
                <div class="row match-height">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>ĐƠN VỊ CHUYỂN ĐỔI </strong>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="form">
                                        <div class="row">
                                            <input type="text" value="@Model.TransferId" name="TransferId" hidden />
                                            <div class="col-md-12 col-12 row">
                                                <div class="col-md-5 col-5">
                                                    <h6>Mã vạch</h6>
                                                    <div class="form-group position-relative">
                                                        <input type="text" class="form-control" id="txtTransferBarCodePrice" name="TransferBarCode" placeholder="Hệ thống tự tạo khi để trống" value="@Model.TransferBarCode">
                                                    </div>
                                                </div>
                                                <div class="col-md-5 col-5">

                                                    <h6>Đơn vị tính cơ bản</h6>
                                                    <fieldset class="form-group">
                                                        <select class="form-select" name="ParentUnitId" id="txtParentUnitId">
                                                            <option value="" disabled selected>Tất cả</option>
                                                            @foreach (var unit in units)
                                                            {
                                                                <option value='@unit.Id'>@unit.Name</option>
                                                            }
                                                        </select>
                                                    </fieldset>
                                                </div>

                                                <div class="col-md-2 col-5">
                                                    <h6>Tỉ lệ quy đổi</h6>
                                                    <div class="form-group position-relative">
                                                        <input type="number" class="form-control" value="@Model.TransferQuantity" name="TransferQuantity" id="txtTransferQuantity">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-12 row">
                                                <div class="col-md-6 col-12">
                                                    <h6>Giá nhập</h6>
                                                    <div class="form-group position-relative">
                                                        <input type="number" class="form-control" value="@Model.ParentImportPrice" min="0" name="ParentImportPrice" id="txtParentImportPrice">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-12">
                                                    <h6>Giá bán</h6>
                                                    <div class="form-group position-relative">
                                                        <input type="number" class="form-control" value="@Model.ParentSellPrice" name="ParentSellPrice">
                                                    </div>
                                                </div>

                                                <div class="form-check form-switch col-12 col-md-12">
                                                    <input class="form-check-input" type="checkbox"
                                                           id="flexSwitchCheckChecked" checked="checked">
                                                    <label class="form-check-label" for="flexSwitchCheckChecked">
                                                        Đơn vị nhập hàng mặc định
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-12 d-flex justify-content-end">
                                            <a href="javascript:;" class="btn btn-success add-transfer-session btn-sm">Thêm</a> &nbsp;
                                            <a href="javascript:;" class="btn btn-danger btn-sm">Xóa</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </form>

</div>
<div class="col-12 d-flex justify-content-end">
    <button type="button" class="btn btn-primary me-1 mb-1" id="updateProduct">Cập nhật mặt hàng</button>
    <button type="button" class="btn btn-light-secondary me-1 mb-1">Hủy bỏ</button>
</div>
<script src="~/assets/js/components/add-product.js"></script>
<script>
    $(document).ready(function () {
        GetCategories('@Model.CategoryId');
        $("#dtpUnit").val('@Model.UnitId');
        $("#txtParentUnitId").val(@Model.ParentUnitId);

        $("#updateProduct").click(function () {
            let isValid = ValidateInput();
            if (isValid == false) {
                return;
            }

            $("#updateProductForm").submit();
        });
    });
</script>
