
@{
    ViewData["Title"] = "GetCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>DANH MỤC HÀNG HÓA</h3>
            <p class="text-subtitle text-muted">Quản lý danh mục hàng hóa trong cửa hàng</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="home.html">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Hàng hóa</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">

    <section class="section">
        <div class="col-12 d-flex justify-content-end" style="margin-bottom: 7px;">
            <a href="javascript:;" class="btn btn-success me-1 mb-1" id="add-category">
                <i class="bi bi-lock-open"></i> Thêm mới danh mục
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-bordered table-sm" cellspacing="0"
                       width="100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên nhóm hàng hóa</th>
                            <th>Vị trí</th>
                            <td>Mô tả</td>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="categories">
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>

<div class="modal fade text-left modal-" id="modal-add-category" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discount-title" style="text-transform: uppercase;">THÊM MỚI DANH MỤC HÀNG</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-vertical">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-name">Tên danh mục</label>
                                    <input type="text" id="category-name" class="form-control" name="fname" placeholder="Tên danh mục">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-location">Vị trí</label>
                                    <input type="email" id="category-location" class="form-control" name="email-id" placeholder="Vị trí hàng hóa">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-description">Mô tả</label>
                                    <textarea class="form-control" id="category-description" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer pd-t-0">
                <button type="button" class="btn btn-light-primary" data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Hủy bỏ</span>
                </button>
                <button type="button" class="btn btn-primary ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" id="btn-add-category">Thêm mới</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade text-left modal-" id="modal-update-category" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discount-title" style="text-transform: uppercase;">CẬP NHẬT DANH MỤC HÀNG</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-vertical">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-12">
                                <input type="text" id="update-category-id" hidden />
                                <div class="form-group">
                                    <label for="category-name">Tên danh mục</label>
                                    <input type="text" id="update-category-name" class="form-control" name="fname" placeholder="Tên danh mục">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-location">Vị trí</label>
                                    <input type="email" id="update-category-location" class="form-control" name="email-id" placeholder="Vị trí hàng hóa">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="category-description">Mô tả</label>
                                    <textarea class="form-control" id="update-category-description" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer pd-t-0">
                <button type="button" class="btn btn-light-primary" data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Hủy bỏ</span>
                </button>
                <button type="button" class="btn btn-primary ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" id="btn-update-category">Cập nhật</span>
                </button>
            </div>
        </div>
    </div>
</div>


<script src="/assets/vendors/jquery/jquery.min.js"></script>
<script src="/assets/vendors/jquery-datatables/jquery.dataTables.min.js"></script>
<script src="/assets/vendors/jquery-datatables/custom.jquery.dataTables.bootstrap5.min.js"></script>
<script src="/assets/vendors/fontawesome/all.min.js"></script>

<script src="/assets/js/mazer.js"></script>
<script>
    $(document).ready(function () {
        GetCategories();
        $("#add-category").click(function () {
            $("#modal-add-category").modal("show");
        });

        $("#btn-add-category").click(function () {
            AddCategory();
            $("#modal-add-category").modal("hide");
        });

        $("#btn-update-category").click(function () {
            let url = "@Url.Action("UpdateCategory","Admin")";
            let name = $("#update-category-name").val();
            let location = $("#update-category-location").val();
            let description = $("#update-category-description").val();
            let id = $("#update-category-id").val();

            let request = {
                Id: id,
                Name: name,
                Location: location,
                Description: description
            }
            $.ajax({
                url: url,
                type: "PUT",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                traditional: true,
                data: JSON.stringify(request),
                success: function (data) {
                    GetCategories();
                    $("#modal-update-category").modal("hide");
                    showMessage("success", data);
                }
            })
        })
    });

    function AddCategory() {
        let name = $("#category-name").val();
        let location = $("#category-location").val();
        let desc = $("#category-description").val();
        let request = {
            Name: name,
            Location: location,
            Description: desc
        };

        let url = "@Url.Action("AddCategory","Admin")";

        $.ajax({
            url: url,
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            traditional: true,
            data: JSON.stringify(request),
            success: function (data) {
                GetCategories();
                showMessage("success", data);
            }
        });
    }

    function GetCategories() {
        let categoryUrl = "@Url.Action("Categories","Admin")";
        $.ajax({
            url: categoryUrl,
            success: function (categories) {
                let html = "";
                let index = 1;
                categories.forEach((category) => {
                    html += '<tr category-id="';
                    html += category.id;
                    html += '"><td>';
                    html += index;
                    html += '</td><td><strong>';
                    html += category.name;
                    html += '</strong></td><td>';
                    html += category.location;
                    html += '</td><td>';
                    html += category.description;
                    html += '</td><td>';
                    html += '<a href="javascript:;" class="product-update" category-id=';
                    html += category.id;
                    html += '><i class="fa fa-edit text-primary"></i></a>&nbsp;';
                    html += '<a href="javascript:;" class="product-delete" category-id="';
                    html += category.id;
                    html += '"><i class="fa fa-trash text-danger"></i></a>';
                    html += '</td>';
                    html += '</tr>';
                    index++;
                });
                $("#categories").html(html);

                $("a.product-update").click(function () {
                    let row = $(this).closest("tr");
                    let id = row.attr("category-id");
                    let name = row.find("td:nth-child(2)").text();
                    let location = row.find("td:nth-child(3)").text();
                    let description = row.find("td:nth-child(4)").text();

                    $("#update-category-name").val(name);
                    $("#update-category-location").val(location);
                    $("#update-category-description").val(description);
                    $("#update-category-id").val(id);

                    $("#modal-update-category").modal("show");
                });

                $("a.product-delete").click(function () {
                    let row = $(this).closest("tr");
                    let id = row.attr("category-id");
                    row.remove();
                    DeleteCategory(id);
                });
            }
        });
    }

    function DeleteCategory(id) {
        let url = "@Url.Action("DeleteCategory","Admin")";
        $.ajax({
            url: url,
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            traditional: true,
            data: {
                id: id
            },
            success: function (data) {
                showMessage("danger", data);
            }
        })
    }
</script>

